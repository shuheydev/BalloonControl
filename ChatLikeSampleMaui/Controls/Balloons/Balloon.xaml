<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ChatLikeSampleMaui.Controls.Balloon"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ChatLikeSampleMaui.Controls"
    x:Name="this">

    <Grid>
        <controls:BalloonMouthGraphicsView
            x:Name="balloonMouth"
            BalloonMouthColor="{Binding BalloonColor}"
            HeightRequest="100" />

        <Frame
            x:Name="balloonBody"
            Margin="20,10"
            BackgroundColor="{Binding BalloonColor, FallbackValue='Red'}"
            BindingContext="{x:Reference this}"
            BorderColor="{Binding BalloonColor}"
            HasShadow="False">
            <Label
                x:Name="label"
                LineBreakMode="WordWrap"
                Text="{Binding Text, FallbackValue='Hello world!'}"
                VerticalOptions="FillAndExpand"
                VerticalTextAlignment="Center" />
        </Frame>

    </Grid>

</ContentView>
